---
import { Button } from "./ui/button";
---

<section class="w-full px-6 py-24 md:px-12 bg-gray-50 dark:bg-gray-800">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold mb-4 font-arvo">Launch today</h2>
      <p class="text-xl text-gray-600 dark:text-gray-300">
        Simple, transparent pricing that scales with your business
      </p>
    </div>

    <div class="max-w-lg mx-auto">
      <div class="bg-white dark:bg-gray-900 rounded-lg shadow-xl p-8">
        <div class="flex justify-between items-center mb-8">
          <div>
            <h3 class="text-2xl font-bold mb-2">Pro Plan</h3>
            <p class="text-gray-600 dark:text-gray-300">
              Everything you need to get started
            </p>
          </div>
          <div class="text-right">
            <div class="text-3xl font-bold">$29.99</div>
            <div class="text-gray-600 dark:text-gray-300">per month</div>
          </div>
        </div>

        <ul class="space-y-4 mb-8">
          <li class="flex items-center">
            <svg
              class="w-5 h-5 text-green-500 mr-3"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                clip-rule="evenodd"></path>
            </svg>
            <span>Unlimited API calls</span>
          </li>
          <li class="flex items-center">
            <svg
              class="w-5 h-5 text-green-500 mr-3"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                clip-rule="evenodd"></path>
            </svg>
            <span>24/7 Support</span>
          </li>
          <li class="flex items-center">
            <svg
              class="w-5 h-5 text-green-500 mr-3"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                clip-rule="evenodd"></path>
            </svg>
            <span>Advanced analytics</span>
          </li>
        </ul>

        <Button className="w-full justify-center" size="lg">Get Started</Button>
      </div>
    </div>
  </div>
</section>
